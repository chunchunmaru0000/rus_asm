#влечь "база.ср"

лик Лексер (
	ист: лик Исток
	место_в_файле: ц64
)

фц новый_лексер(из находясь_в: стр) лик Лексер (
	лек есть лик Лексер = пновый лик Лексер,
	ист есть лик Исток  = пновый лик Исток,
	вфе есть лик ВФайле = пновый лик ВФайле,

	лек->ист = ист,
	лек->место_в_файле = 0,

	ист->в_файле = вфе,
	ист->строка = 1,
	ист->буква = 1,

	файл есть ч32 = открытьф(из, ФлагиФйлв.Чтение, 0),
	файл < 0 ?? (
		вещать..(ЦК, "ОШИБКА В ОТКРЫТИИ ФАЙЛА\n", ЦН),
		выйти с кодом 1 .
		; во("ОШИБКА В ОТКРЫТИИ ФАЙЛА", ист),
	)

	длиной есть ч64 = файл.идтиф(0, ФайлОт.Конца),
	текст есть стр = пластом(длиной + 1),

	файл.идтиф(0, ФайлОт.Начала),
	файл.читатьф(текст, длиной),

	текст[длиной] = 0,
	файл.закрытьф(),

	вфе->путь = из,
	вфе->текст = текст,
	вфе->длина = длиной - 1,

	воздать лек,
)

фц разобрать_на_лексемы(из находясь_в: стр) лик ПРяд (
	л есть лик Лексер = новый_лексер(из, находясь_в),
	р есть лик ПРяд = новый_пряд(1024, 8),
	воздать р,
)
