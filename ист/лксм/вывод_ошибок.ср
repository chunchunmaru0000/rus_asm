пусть ОТСТУП: стр = "    ",

фц вещать_строчку(строка: стр) стр (
	(*строка && *строка != 10) тогда ( ; \n
		*строка == 9 ; \t
			? вещать(ОТСТУП)
			: начертать(*строка),
		строка++,
	)
	*строка == 10 ?? ( строка++ ) ; \n
	воздать строка,
)

фц вещать_строчку_текста(текст цвет: стр строчка: ц32) тлен (
	строчка--,
	буквица есть стр = текст,

	н есть ц64 = строчка - !!строчка,
	н тогда (
		*буквица == 10 ?? ( н-- ),
		буквица++,
	)

	вещать..(ЦН, (строчка, 5), " |"),
	строчка ?? ( буквица = вещать_строчку(буквица) )
	начертать(10), ; \n

	вещать..((строчка + 1, 5), " |", цвет),
	буквица = вещать_строчку(буквица),
	вещать..(ЦН, "\n"),

	вещать..((строчка + 2, 5), " |"),
	*буквица ?? ( вещать_строчку(буквица) ),
	начертать(10),
)

фц во(ошбк: стр и: лик Исток) тлен (
	вещать..(
		ЦБ, и->в_файле->путь, ":", и->строчка, ":", и->буква,
		" ", ЦК, "ОШИБКА: ", ошбк, "\n"
	),
	вещать_строчку_текста(и->в_файле->текст, ЦР, и->строчка),
	выйти с кодом 1 .
)

фц вот(ошбк: стр л: лик Лексема) тлен (
	и есть лик Исток = л->ист,
	вещать..(
		ЦБ, и->в_файле->путь, ":", и->строчка, ":", и->буква,
		" ", ЦК, "ОШИБКА: ", ошбк, " [", л->вид, "]:[", л->род, "]\n"
	),
	вещать_строчку_текста(и->в_файле->текст, ЦР, и->строчка),
	выйти с кодом 1 .
)

фц предупредить(ошбк: стр и: лик Исток) тлен (
	вещать..(
		ЦБ, и->в_файле->путь, ":", и->строчка, ":", и->буква,
		" ", ЦФС, "ПРЕДУПРЕЖДЕНИЕ: ", ошбк, "\n"
	),
	вещать_строчку_текста(и->в_файле->текст, ЦР, и->строчка),
)
