вход глав

участок чит изм
	пусть ответ байт \
"HTTP/1.1 200 OK
Content-Type: text/html; charset=UTF-8
Connection: close

эээ world
"
вот длина_ответа 87

вот ПОРТ 8080
	пусть ссылка байт "Сервер запущен на http://localhost:8080" 10
вот длина_ссылки 55

вот сок_поток 	1
вот инет 		2
адрес:
	пусть в_семья	дбайт инет ; AF_INET: 2
	пусть в_порт	байт  0x1f 0х90 ; 8080 в big endian
	пусть в_аддр	чбайт 0 ; INADDR_ANY: 0
	пусть вбайт 0
вот адрес_размер 16

пусть сок чбайт 0
пусть клиент чбайт 0

участок чит исп
глав:
; ПОЛУЧИТЬ СОКЕТ
	быть еах 41 ; socket
	быть рди инет
	быть рси сок_поток
	искл рдх рдх
	сзов
	быть (сок) еах
; СВЯЗАТЬ СОКЕТ
	быть еах 49 ; bind
	быть еди (сок)
	быть рси адрес
	быть рдх адрес_размер
	сзов
; СЛУШАТЬ СОКЕТ
	быть еах 50 ; listen
	быть еди (сок)
	быть еси 1
	сзов
; ВЫВОД ССЫЛКИ
	быть еах 1 ; write
	быть еди 1 ; stdout
	быть рси ссылка
	быть рдх длина_ссылки
	сзов

	цикл:
	; ПОЛУЧЕНИЕ КЛИЕНТА
		быть еах 43 ; асcеpt
		быть еди (сок)
		быть рси 0
		быть рдх 0
		сзов
		быть (клиент) еах
	; ПИСАТЬ ОТВЕТ КЛИЕНТУ
		быть еах 1 ; write
		быть еди (клиент)
		быть рси ответ
		быть рдх длина_ответа
		сзов
	; ЗАКРЫТЬ КЛИЕНТА
		быть еах 3 ; close
		быть еди (клиент)
		сзов

		идти цикл
